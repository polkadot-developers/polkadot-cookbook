#!/bin/sh
# Pre-commit hook for Polkadot Cookbook
# Runs formatting and linting checks before commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Run cargo fmt check
echo "  âœ Checking Rust formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Formatting issues found. Run 'cargo fmt --all' to fix."
    exit 1
fi

# Run cargo clippy
echo "  âœ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
fi

echo "âœ… Pre-commit checks passed!"
